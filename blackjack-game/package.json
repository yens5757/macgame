  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "dotenv -e .env.local -- ng build && dotenv -e .env.local -- node replace-env.js",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "serve:ssr:blackjack-game": "node dist/blackjack-game/server/server.mjs"
